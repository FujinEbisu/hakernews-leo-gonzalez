<div class="container text-center p-5">
<% @posts.each do |post| %>
<div class="row align-items-start justify-content-center">
  <div class="card" data-controller="upvote" style="width: 600px; margin: 10px; border: 1px solid #000;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">By : <%= post.by %></h6>
    <p class="card-text">Votes : <%= post.vote %></p>
    <%= link_to "Show", post_path(post) %>
    <button class="btn btn-primary" data-action="click->upvote#upvote">Upvote</button>
  </div>
</div>
  <% end %>
</div>
</div>
